{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "quotes": ["error", "single"], // Força o uso de aspas simples
    "semi": ["error", "always"], // Força o uso de ponto e vírgula
    "max-len": ["error", { "code": 80 }] // Força o limite de 80 caracteres por linha
  }
}
